@import "./helpStyles/variables.styl"
@import "./helpStyles/mixins.styl"
.profile-banner
    background cardColor
    padding 20px
    width 100%
    margin 0 auto
    display block
    color #FFF
    box-shadow 0px 0px 10px rgba(#000, .2)
    font-family Roboto, Arial, Helvetica, sans-serif
    border-radius 20px
.profile-title
    display flex
    flex-basis 100%
    flex-wrap wrap
    justify-content center
.profile-image
    border-radius 50%
    padding 20px
    margin 0 auto
    flex-basis 100%
    img 
        width 100%
.profile-info
    flex 1
    font-size 2em
    margin 10px
    flex-basis 100%
    li 
        padding 20px
        list-style none
        text-align center
        font-weight 200
        font-size .75em
        &:first-child
            font-size 1.5em
.profile-status
        border-top 1px solid #FFF
        padding 20px
        flex-basis 100%
        display flex
        li 
            flex 1
            list-style none
            font-size 1.5em
            display block   
            text-transform uppercase
            font-weight 200
            span 
                font-weight 400
                display block
                font-size 2em
                margin 20px
                
.todo-list
    margin 20px
    padding 20px
    display flex
    flex-wrap wrap
    justify-content space-between
    width 100%
    margin 0 auto
.todo-item
    display flex
    flex-wrap wrap
    font-size 1.5em
    padding 20px
    border-radius 30px
    cursor pointer
    justify-content flex-start
    flex-basis 30%
    margin-top 20px
    font-family Roboto, Arial, Helvetica, sans-serif
    border 1px solid #000
    li 
        list-style none
        color #000
        &:hover
            color navbarColor
            opacity .5
    &:hover
        opacity .5
.close-icon 
    iconStyle()
    color #800000
.edit-icon 
    color #b36b00
    iconStyle()    
.icon-wrap
    margin-right auto
    span 
        font-size .75em


@media only screen and (max-width 1200px) 
    .todo-item
        flex-basis 50% 
@media only screen and (max-width 992px)
    .todo-item
        flex-basis 100%
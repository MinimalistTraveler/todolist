@import "./helpStyles/mixins.styl"
@import "./helpStyles/variables.styl"

.navbar
    padding 20px
    background navbarColor
    box-shadow 3px 2px 10px rgba(#000, .4)
    margin-bottom 30px
    position relative

.navbarContainer
    flex-basis 95%
    display flex
    justify-content space-around
    font-family Roboto, Arial, Helvetica, sans-serif
    font-weight 300
.navbarMainCont
    margin-right auto
    a 
        color #ffffff
        text-decoration none
.navbarLogCont
    margin-left auto
.navbar-link
    navbarLink()
    a 
        color #ffffff
        text-decoration none
    
.navbarBrand
    display flex
    align-items center
    justify-content center
    a
        text-decoration none
        color #FFF
        letter-spacing .75vw
        font-size 2em
.navbarCollapse
    width 40px
    height 40px
    margin-right auto
.collapseIconWrap
    display flex
    align-items center
.hamburger-icon 
    margin auto
    padding 20px
    color #FFF
    position relative
    transition all .2s ease-in
    &:before
        position absolute
        display flex
        top 0
        left 0
        right 0
        bottom 0
        justify-content center
        align-items center
        
    &:hover 
        background rgba(#000, .5)
        border-radius 50%
        transition background, border-radius .2s ease-in
        cursor pointer

.navbar-tab
    position fixed !important
    top 15%
    right 0
    background tabColor
    height auto
    display flex
    flex-wrap wrap
    z-index 999
.navbar-tab__link
    flex-basis 100%
    color #FFF
    height 100px
    display flex
    align-items center
    justify-content center
    transition all .5s
    background transparent
    border none
    width 25px
    &:hover
        background navbarLinkColor
        color #ffffff
        transition all .5s
        cursor pointer
.mobileMenu
    position absolute
    z-index 999
    top 100%
    left 0
    background #6969B3
    transition display, width .5s
    width 0%
    a   
        display block
        transform translateX(-100%)
        margin-left -999px
        overflow hidden
        transition transform, margin .5s ease-in
        padding 20px
        color #EEE
        font-size 1.1em
        text-decoration none
        &:hover
            background navbarLinkColor
        &:last-child 
            box-shadow  3px 5px 10px rgba(#000, .1)

.collapse
    display block
    width 100% !important
    a
        transform translateX(0%)
        margin 0